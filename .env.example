# Servidor
PORT=3006
NODE_ENV=production

# Base de datos MySQL (remota)
DB_HOST=
DB_PORT=3306
DB_NAME=
DB_USER=
DB_PASSWORD=
DB_DIALECT=mysql
DB_SSL=false

# Railway (opcional: usa un solo connection string)
MYSQL_PUBLIC_URL=
MYSQL_URL=

# Recomendado en Railway (servicio backend): define solo MYSQL_URL
# Recomendado en local: usa MYSQL_PUBLIC_URL o DB_* con host proxy

# Autenticación
JWT_SECRET=

# Correo (elige una opción)
# Opción 1: Proveedor genérico SMTP
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM="Conv3rTech Soporte <soporte@tudominio.com>"

# Opción 2: Brevo
SMTP_PROVIDER=brevo
BREVO_API_KEY=

# Opción 3: SendGrid
SMTP_PROVIDER=sendgrid
SENDGRID_API_KEY=

# Opción 4: Gmail OAuth2 (no recomendado en serverless)
SMTP_PROVIDER=gmail
SMTP_AUTH_TYPE=oauth2
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REFRESH_TOKEN=
SMTP_USER=

# Mail service
RECOVERY_CODE_EXPIRES_MINUTES=15
SMTP_DEBUG=false
SMTP_POOL=true
SMTP_TLS_REJECT_UNAUTHORIZED=true
SMTP_SEND_MODE=async
APP_SUPPORT_URL=https://conv3rtech.com/support
